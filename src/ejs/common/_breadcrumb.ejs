<div class="l-breadcrumb p-breadcrumb">
    <% for (let value of meta.local[pageId].breadcrumb) { %>
        <% let path=value.path; let label=value.label; %>
            <% if (path==='' ) { %>
                <span><span class="current-item">
                        <%= label %>
                    </span></span>
                <% } else { %>
                    <span><a href="<%= path %>">
                            <%= label %>
                        </a></span>
                    &nbsp;&gt;&nbsp; <% } %>
                        <% } %>
</div>