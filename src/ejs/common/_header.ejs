<% let isHome=pageId==="home" %>
    <header class="<%= isHome ? "l-header p-header js-header" : "l-header p-header p-header--sub js-header" %>">
        <div class="l-container p-header__container">
            <div class="p-header__inner">
                <% if (isHome) { %>
                    <h1 class="p-header__logo c-logo">
                        <%= meta.global.title; %>
                    </h1>
                    <% } else { %>
                        <p class="p-header__logo c-logo">
                            <a href="<%= meta.local.home.slug; %>">
                                <%= meta.global.title; %>
                            </a>
                        </p>
                        <% } %>

                            <nav class="p-header__gnav p-gnav">
                                <ul class="p-gnav__items">
                                    <% for (let key in meta.local) { %>
                                        <% if (key!=="home" ) { %>
                                            <% if (key===pageId) { %>
                                                <li class="p-gnav__item">
                                                    <a href="<%= meta.local[key].slug; %>" class="p-gnav__link is-current">
                                                        <%= meta.local[key].title; %>
                                                    </a>
                                                </li>
                                                <% } else { %>
                                                    <li class="p-gnav__item">
                                                        <a href="<%= meta.local[key].slug; %>" class="p-gnav__link">
                                                            <%= meta.local[key].title; %>
                                                        </a>
                                                    </li>
                                                    <% } %>
                                                        <% } %>
                                                            <% } %>
                                </ul>
                            </nav>
            </div>
        </div>
    </header>